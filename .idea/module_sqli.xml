<?xml version="1.0" encoding="UTF-8"?>
<project name="module_sqli" default="compile.module.sqli">
  <dirname property="module.sqli.basedir" file="${ant.file.module_sqli}"/>
  
  <property name="module.jdk.home.sqli" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.sqli" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.sqli" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.sqli" value="-encoding UTF-8 -source 11 -target 11 ${compiler.args}"/>
  
  <property name="sqli.output.dir" value="undefined"/>
  <property name="sqli.testoutput.dir" value="undefined"/>
  
  <path id="sqli.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="sqli.module.production.classpath">
    <path refid="${module.jdk.classpath.sqli}"/>
  </path>
  
  <path id="sqli.runtime.production.module.classpath"/>
  
  <path id="sqli.module.classpath">
    <path refid="${module.jdk.classpath.sqli}"/>
  </path>
  
  <path id="sqli.runtime.module.classpath"/>
  
  
  <patternset id="excluded.from.module.sqli">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.sqli">
    <patternset refid="excluded.from.module.sqli"/>
  </patternset>
  
  
  <target name="compile.module.sqli" depends="compile.module.sqli.production,compile.module.sqli.tests" description="Compile module SQLI"/>
  
  <target name="compile.module.sqli.production" depends="register.custom.compilers" description="Compile module SQLI; production classes"/>
  
  <target name="compile.module.sqli.tests" depends="register.custom.compilers,compile.module.sqli.production" description="compile module SQLI; test classes" unless="skip.tests"/>
  
  <target name="clean.module.sqli" description="cleanup module">
    <delete dir="${sqli.output.dir}"/>
    <delete dir="${sqli.testoutput.dir}"/>
  </target>
</project>